{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "StreamBucketName": {
            "Type": "String",
            "Default": "test-bucket-olien",
            "Description": "Destination S3 Bucket for firehose"
        }
    },
    "Resources": {
        "LambdaInvokePermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Fn::GetAtt": [
                        "FirehoseLambda",
                        "Arn"
                    ]
                },
                "Action": "lambda:*",
                "Principal": "*",
                "SourceAccount": {
                    "Ref": "AWS::AccountId"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "f7254bc7-6b2f-41a1-b2e1-3a8fd05c98f6"
                }
            }
        },
        "S3DeliveryStream": {
            "Type": "AWS::KinesisFirehose::DeliveryStream",
            "Properties": {
                "S3DestinationConfiguration": {
                    "BucketARN": {
                        "Fn::GetAtt": [
                            "S3BucketForFirehose",
                            "Arn"
                        ]
                    },
                    "BufferingHints": {
                        "IntervalInSeconds": "60",
                        "SizeInMBs": "50"
                    },
                    "CompressionFormat": "UNCOMPRESSED",
                    "Prefix": "",
                    "RoleARN": {
                        "Fn::GetAtt": [
                            "FirehoseLambdaCloudwatchRole",
                            "Arn"
                        ]
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "5818184e-ac3e-45e6-b1f8-b307f3932648"
                }
            }
        },
        "S3BucketForFirehose": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Ref": "StreamBucketName"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "f7ca6f2c-0785-4e68-afd9-c57e9d591a15"
                }
            }
        },
        "FirehoseLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Handler": "index.handler",
                "Role": {
                    "Fn::GetAtt": [
                        "FirehoseLambdaCloudwatchRole",
                        "Arn"
                    ]
                },
                "Code": {
                    "ZipFile": {
                        "Fn::Join": [
                            "\n",
                            [
                                "var AWS = require('aws-sdk');",
                                "var firehose = new AWS.Firehose();",
                                "exports.handler = function(event, context) {",
                                "   var params = {",
                                "       DeliveryStreamName: ",
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "'",
                                            {
                                                "Ref": "S3DeliveryStream"
                                            },
                                            "',"
                                        ]
                                    ]
                                },
                                "       Record: {",
                                "           Data: JSON.stringify({",
                                "               index: 'created_by_cloudformation_template',",
                                "               data: new Date().toISOString()",
                                "           })",
                                "       }",
                                "   };",
                                "   firehose.putRecord(params, function(err, data) {",
                                "       if (err)",
                                "          console.log(err, err.stack); // an error occurred",
                                "       else",
                                "          console.log(data);           // successful response",
                                "       context.done();",
                                "   });",
                                "};"
                            ]
                        ]
                    }
                },
                "Runtime": "nodejs4.3"
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "ece93d7f-01cc-49fe-a5e2-2b7d6be7e65d"
                }
            }
        },
        "FirehoseTestLogLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Handler": "index.handler",
                "FunctionName": "FirehoseTestLogLambda",
                "Role": {
                    "Fn::GetAtt": [
                        "FirehoseLambdaCloudwatchRole",
                        "Arn"
                    ]
                },
                "Code": {
                    "ZipFile": {
                        "Fn::Join": [
                            "\n",
                            [
                                "def handler(event, context):",
                                "   return 'Hello from Lambda'"
                            ]
                        ]
                    }
                },
                "Runtime": "python2.7"
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "696d3344-e856-4123-b4b9-c3c0925092f3"
                }
            }
        },
        "DestinationWithName": {
            "Type": "AWS::Logs::SubscriptionFilter",
            "Properties": {
                "DestinationArn": {
                    "Fn::GetAtt": [
                        "FirehoseLambda",
                        "Arn"
                    ]
                },
                "LogGroupName": "/aws/lambda/FirehoseTestLogLambda",
                "FilterPattern": ""
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "ea7d76f6-1e57-4671-9120-2b322750564c"
                }
            }
        },
        "FirehoseLambdaCloudwatchRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "firehose.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        },
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        },
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "s3.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        },
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "events.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "S3BucketAccess",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": {
                                "Effect": "Allow",
                                "Action": [
                                    "s3:AbortMultipartUpload",
                                    "s3:GetBucketLocation",
                                    "s3:GetObject",
                                    "s3:ListBucket",
                                    "s3:ListBucketMultipartUploads",
                                    "s3:PutObject"
                                ],
                                "Resource": [
                                    {
                                        "Fn::Join": [
                                            "",
                                            [
                                                "arn:aws:s3:::",
                                                {
                                                    "Ref": "StreamBucketName"
                                                }
                                            ]
                                        ]
                                    },
                                    {
                                        "Fn::Join": [
                                            "",
                                            [
                                                "arn:aws:s3:::",
                                                {
                                                    "Ref": "StreamBucketName"
                                                },
                                                "/*"
                                            ]
                                        ]
                                    },
                                    "arn:aws:s3:::%FIREHOSE_BUCKET_NAME%",
                                    "arn:aws:s3:::%FIREHOSE_BUCKET_NAME%/*"
                                ]
                            }
                        }
                    },
                    {
                        "PolicyName": "LambdaExecution",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": {
                                "Effect": "Allow",
                                "Action": [
                                    "lambda:InvokeFunction",
                                    "lambda:GetFunctionConfiguration"
                                ],
                                "Resource": [
                                    {
                                        "Fn::Join": [
                                            ":",
                                            [
                                                "arn:aws:lambda",
                                                {
                                                    "Ref": "AWS::Region"
                                                },
                                                {
                                                    "Ref": "AWS::AccountId"
                                                },
                                                "function:*"
                                            ]
                                        ]
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "PolicyName": "LambdaBasicExecution",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents",
                                        "logs:CreateLogGroup"
                                    ],
                                    "Resource": "arn:aws:logs:*:*"
                                }
                            ]
                        }
                    },
                    {
                        "PolicyName": "AmazonKinesisFullAccess",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Action": [
                                        "firehose:*"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "7eb2e1c9-ebdf-40c8-971e-d8e1480c77cf"
                }
            }
        }
    },
